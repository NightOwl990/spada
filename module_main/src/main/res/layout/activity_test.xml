<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lgkk.base_project.widget.CommonTitleBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="Thông báo lỗi"
        app:centerTextColor="@color/text_dark"
        app:centerTextSize="@dimen/length_15"
        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftCustomView="@layout/common_titlebar_left_icon_back"
        app:leftType="none"
        app:rightCustomView="@layout/common_titlebar_right_icon_search"
        app:rightType="none"
        app:showBottomLine="true"
        app:titleBarHeight="@dimen/length_45" />


    <RelativeLayout
        android:id="@+id/rootView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar"
        android:background="#ffeeeeee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/length_50">

            <ImageView
                android:id="@+id/page_tip_img"
                android:layout_width="@dimen/length_100"
                android:layout_height="@dimen/length_100"
                android:background="@drawable/app_images_img_failed" />

            <LinearLayout
                android:id="@+id/ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_15"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/length_18"
                    android:layout_height="@dimen/length_18"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/length_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/msg_ic_send_fail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Ứng dụng vừa gặp một sự cố kỹ thuật"
                    android:textColor="#ffff4978"
                    android:textSize="@dimen/length_15" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/length_50"
                android:layout_marginTop="@dimen/length_15"
                android:layout_marginRight="@dimen/length_50"
                android:gravity="center"
                android:text="Xin lỗi vì sự bất tiện này, chúng tôi sẽ khắc phục trong thời gian sớm nhất"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15" />

            <Button
                android:id="@+id/btnRestart"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/length_34"
                android:layout_marginTop="@dimen/length_10"
                android:background="@drawable/tip_btn_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/length_10"
                android:paddingRight="@dimen/length_10"
                android:text="Khởi động lại ứng dụng"
                android:textAllCaps="false"
                android:textColor="#ffff4978"
                android:textSize="@dimen/length_15" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>