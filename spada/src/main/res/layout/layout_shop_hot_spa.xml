<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_hot_hospitals"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_20"
        android:layout_marginBottom="@dimen/d_14"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d_13"
        android:paddingRight="@dimen/d_10">

        <TextView
            android:id="@+id/hot_hospitals_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="Spa nổi bật"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/length_15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/length_10"
                android:layout_height="@dimen/length_10"
                android:layout_marginRight="@dimen/length_3"
                android:scaleType="fitCenter"
                android:src="@drawable/circle_browse_filter" />

            <TextView
                android:id="@+id/browse_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khu nổi tiếng"
                android:textColor="@color/drop_down_selected"
                android:textSize="@dimen/length_12" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/length_10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/length_10"
                android:layout_height="@dimen/length_10"
                android:layout_marginRight="@dimen/length_3"
                android:scaleType="fitCenter"
                android:src="@drawable/gray_circle_address_filter" />

            <TextView
                android:id="@+id/address_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gần bạn nhất"
                android:textColor="@color/drop_down_selected"
                android:textSize="@dimen/length_12" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHotSpa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/length_8" />

    <View
        android:id="@+id/hot_hospitals_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/d_10"
        android:layout_marginTop="@dimen/d_6"
        android:background="@color/bg_service_all" />
</LinearLayout>