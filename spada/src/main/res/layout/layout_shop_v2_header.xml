<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/d_35"
    android:background="@color/transparent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/rl_browse"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/d_160">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/d_13"
            android:layout_marginBottom="@dimen/d_25">

            <com.lgkk.spada.screen.home.widget.AmoyTicketView
                android:id="@+id/head_bubbleView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/length_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d_6"
                android:text="Đã ghé qua"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/length_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_13"
            android:layout_marginTop="@dimen/d_72"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/length_46"
                android:gravity="center"
                android:text="Hà Nội"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/length_20" />

            <ImageView
                android:layout_width="@dimen/length_13"
                android:layout_height="@dimen/length_13"
                android:layout_marginLeft="@dimen/length_5"
                android:paddingTop="@dimen/length_2"
                android:scaleType="fitCenter"
                android:src="@drawable/ease_white_location" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/d_10"
            android:layout_gravity="bottom"
            android:background="@drawable/white_top_radius_bg" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCatService"
            android:layout_marginBottom="@dimen/d_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/fl_label_more"
            android:layout_width="@dimen/d_100"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/d_15">

            <TextView
                android:id="@+id/tv_show_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem thêm"
                android:textColor="@color/text_sub"
                android:textSize="@dimen/length_13" />

            <ImageButton
                android:id="@+id/btn_label_more"
                android:layout_width="@dimen/length_10"
                android:layout_height="@dimen/length_10"
                android:layout_marginLeft="@dimen/d_6"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ease_down_arrow" />
        </LinearLayout>

        <!--Banner-->
        <include layout="@layout/layout_shop_banner" />
        <!--Flash sale-->
        <include layout="@layout/layout_shop_flash_sale" />
        <!--Hot spa-->
        <include layout="@layout/layout_shop_hot_spa" />
        <!--Ranking-->
        <include layout="@layout/layout_shop_ranking" />

        <include
            layout="@layout/layout_shop_recommend_city" />

        <TextView
            android:visibility="gone"
            android:id="@+id/feed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_13"
            android:layout_marginTop="@dimen/d_13"
            android:text="Đề cử cùng thành phố"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/length_15" />

        <View
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/length_13"
            android:background="@drawable/white_gra" />
    </LinearLayout>
</LinearLayout>



