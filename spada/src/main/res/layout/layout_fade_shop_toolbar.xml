<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue">
    
    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_7" />

    <RelativeLayout
        android:id="@+id/rlBot"
        android:paddingTop="@dimen/length_8"
        android:paddingBottom="@dimen/length_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:layout_below="@+id/viewTop"
        android:paddingLeft="@dimen/length_13"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_13"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgLeft"
                android:layout_width="@dimen/length_20"
                android:layout_height="@dimen/length_20"
                android:layout_marginRight="@dimen/length_2"
                android:padding="@dimen/length_3"
                android:scaleType="fitCenter"
                android:src="@drawable/ease_gray_location" />

            <TextView
                android:id="@+id/txtLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa điểm"
                android:textColor="@color/text_sub"
                android:textSize="@dimen/length_12" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/btnMiddle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/lnRight"
           >

            <com.lgkk.base_project.widget.roundedimageview.RoundedImageView
                android:id="@+id/imgBgMiddle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_round_transparent_shop"
                app:riv_border_color="@color/transparent"
                app:riv_border_width="0dp"
                app:riv_corner_radius="@dimen/length_15"
                app:riv_mutate_background="true" />

            <ImageView
                android:id="@+id/imgMiddle"
                android:layout_width="@dimen/length_14"
                android:layout_height="@dimen/length_14"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_5"
                android:src="@drawable/search_icon_white" />

            <TextView
                android:id="@+id/txtMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/imgMiddle"
                android:text="Tìm kiếm"
                android:textColor="@color/white"
                android:textSize="@dimen/length_12" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lnRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/btnSubRight"
                android:layout_width="@dimen/length_40"
                android:layout_height="match_parent"
                android:padding="@dimen/length_5"
                android:scaleType="fitCenter"
                android:src="@drawable/ease_envelopes" />

            <RelativeLayout
                android:id="@+id/btnRight"
                android:layout_width="@dimen/length_40"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgIconRight"
                    android:layout_width="@dimen/length_17"
                    android:layout_height="@dimen/length_17"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/length_5"
                    android:src="@drawable/shopping_cart_icon_white" />

                <TextView
                    android:id="@+id/txtAmountRight"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/length_15"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/length_4"
                    android:layout_marginRight="@dimen/length_8"
                    android:background="@drawable/bg_round_shop_discount_border"
                    android:gravity="center"
                    android:minWidth="@dimen/length_18"
                    android:paddingLeft="@dimen/length_3"
                    android:paddingRight="@dimen/length_3"
                    android:text="99+"
                    android:textColor="@color/white"
                    android:textSize="@dimen/length_9"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>