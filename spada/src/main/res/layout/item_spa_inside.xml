<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRvView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/length_7">

    <com.lgkk.base_project.widget.roundedimageview.RoundedImageView
        android:id="@+id/imgSpa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txtName"

        android:scaleType="centerCrop"
        android:src="@drawable/default_spa"
        app:riv_border_color="@color/transparent"
        app:riv_border_width="0dp"
        app:riv_corner_radius="@dimen/length_5"
        app:riv_mutate_background="true" />


    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/length_10"
        android:ellipsize="end"
        android:lines="2"
        android:text="TMV Kangnam - y khoa làm đẹp"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/length_11" />
</RelativeLayout>