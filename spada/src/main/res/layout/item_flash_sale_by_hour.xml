<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d_14"
    android:layout_marginLeft="@dimen/d_14"
    android:layout_marginRight="@dimen/d_14"
    android:background="@drawable/bg_round_border_white_10px"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_95"
        android:layout_marginLeft="@dimen/d_13"
        android:layout_marginTop="@dimen/d_13"
        android:layout_marginRight="@dimen/d_13"
        android:layout_marginBottom="@dimen/d_13"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rlImage"
            android:layout_width="@dimen/d_95"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/length_4"
            >

            <com.lgkk.base_project.widget.roundedimageview.RoundedImageView
                android:id="@+id/imgBefore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/length_2"
                android:scaleType="centerCrop"
                android:src="@drawable/hot_girl_3"
                app:riv_border_color="@color/transparent"
                app:riv_border_width="0dp"
                app:riv_corner_radius="0dp"
                app:riv_mutate_background="true" />

            <TextView
                android:layout_width="@dimen/length_30"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/length_5"
                android:background="@drawable/bg_round_shop_product_options"
                android:gravity="center"
                android:padding="1dp"
                android:text="HOT"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_tag"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/length_4"
            android:layout_toRightOf="@+id/rlImage">

            <RelativeLayout
                android:id="@+id/rlName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--Name-->
                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="【Thẩm mỹ】【Làm đẹp】Gọt cằm V-line khắc phục mọi nhược điểm hoàn toàn"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/length_14" />
            </RelativeLayout>

            <!--Description-->
            <TextView
                android:visibility="gone"
                android:id="@+id/txtShortDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlName"
                android:layout_marginRight="@dimen/d_100"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Chưa ở đâu rẻ hơn ở đây Chưa ở đâu rẻ hơn ở đây Chưa ở đâu rẻ hơn ở đây"
                android:textSize="@dimen/length_12" />


            <com.lgkk.base_project.widget.QuantityPercentView
                android:layout_marginTop="@dimen/d_5"
                android:layout_below="@+id/txtShortDescription"
                android:id="@+id/percentView"
                android:layout_width="@dimen/d_150"
                android:layout_height="wrap_content"
                />

            <!--all price-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:orientation="vertical">
                <!--Price-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/lnDiscountPrice">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="đ"
                        android:textColor="@color/bg_shop_home_tag"
                        android:textSize="@dimen/d_13" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/txtd1"
                        android:gravity="bottom"
                        android:text="20.000.000"
                        android:textColor="@color/bg_shop_home_tag"
                        android:textSize="@dimen/d_13" />

                </LinearLayout>

                <!--Discount Price-->
                <LinearLayout
                    android:id="@+id/lnDiscountPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/lnMemberPrice"
                    android:background="@drawable/bg_strike_through_sub"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="đ"
                        android:textColor="@color/text_sub"
                        android:textSize="@dimen/length_14" />

                    <TextView
                        android:id="@+id/txtDiscountPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="1dp"
                        android:gravity="bottom"
                        android:text="190.000"
                        android:textColor="@color/text_sub"
                        android:textSize="@dimen/length_14" />
                </LinearLayout>

                <!--Member Price-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="đ"
                        android:textColor="@color/text_color_golden"
                        android:textSize="@dimen/d_11" />

                    <TextView
                        android:id="@+id/txtVipPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/txtd2"
                        android:gravity="center"
                        android:text="19.000.000"
                        android:textColor="@color/text_color_golden"
                        android:textSize="@dimen/d_11" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/length_2"
                        android:layout_marginTop="0.5dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/vip_member_card" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"

                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:id="@+id/txtBuyNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_gradient_pink_flash_sale"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/d_4"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="@dimen/d_4"
                    android:text="Mua ngay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d_13" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>

