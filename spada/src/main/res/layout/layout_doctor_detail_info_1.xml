<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnTopInfo"
    android:padding="@dimen/length_15"
    android:layout_marginLeft="@dimen/length_13"
    android:layout_marginRight="@dimen/length_13"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_border_white_10px"
    android:orientation="vertical"
    android:visibility="visible">


    <com.lgkk.base_project.widget.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/length_60"
        android:layout_height="@dimen/length_60"
        android:src="@drawable/logo_benh_vien" />

    <!--Hos Detail-->
    <LinearLayout
        android:id="@+id/lnInfoDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_13"
        android:layout_marginRight="@dimen/length_5"
        android:layout_toRightOf="@+id/imgAvatar"
        android:minHeight="@dimen/length_60"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnDocName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtDocName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="Nguyễn Văn A"
                android:textColor="#ff333333"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgDocNameFlag"
                android:layout_width="@dimen/length_13"
                android:layout_height="@dimen/length_13"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/length_10"
                android:scaleType="fitCenter"
                android:src="@drawable/doctor_answer_flag_icon" />

            <TextView
                android:id="@+id/txtRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/length_5"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="Kinh nghiệm"
                android:textColor=" #B68D54"
                android:textSize="@dimen/length_13" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lnJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/length_5"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bác sĩ"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginTop="@dimen/length_3"
                android:layout_marginRight="@dimen/length_10"
                android:layout_marginBottom="@dimen/length_1"
                android:background="@color/bg_service_all" />

            <TextView
                android:id="@+id/txtOrderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã xử lý: "
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />

            <TextView
                android:id="@+id/txtOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 ca"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnRatingDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/length_5"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <RatingBar
                android:id="@+id/rbDoc"
                style="@style/starRatingBar_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:isIndicator="true"
                android:rating="4.0"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:stepSize="0.1"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtRatingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/length_30"
                android:text="441 đánh giá"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>
    </LinearLayout>

    <!--ln save-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_round_service_blue_50px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/length_10"
        android:paddingTop="@dimen/length_3"
        android:paddingRight="@dimen/length_14"
        android:paddingBottom="@dimen/length_3">

        <ImageView
            android:id="@+id/imgAdd"
            android:layout_width="@dimen/length_15"
            android:layout_height="@dimen/length_15"
            android:src="@drawable/icon_accept_add" />

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textColor="@color/text_service_blue"
            android:textSize="@dimen/length_14" />
    </LinearLayout>

    <!--Point of Doctor-->

    <LinearLayout
        android:id="@+id/lnPointDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnInfoDoc"
        android:layout_marginTop="@dimen/length_15"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/lnAppointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtAppointmentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17567"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAppointmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cuộc hẹn"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnHandle"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtHandleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="375"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHandleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trường hợp"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtAnswerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="288"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAnswerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lượt tư vấn"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnPositive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtPostiveNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="92%"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPositiveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tích cực"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lnPointDoc"
        android:layout_marginTop="@dimen/length_15"
        android:background="@color/divider_1px" />

    <!--Doc Tag -->
    <com.lgkk.spada.widget.ServiceDetailTagFlowLayout
        android:id="@+id/tagFlowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sdtfl_paddingLeft="@dimen/length_13" />
</RelativeLayout>