<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rlFlashSale"
    android:layout_height="@dimen/length_125"
    android:background="@color/white"
    android:visibility="visible">
    <View
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_1px" />

    <View
        android:layout_alignParentRight="true"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/divider_1px" />

    <View
        android:id="@+id/dividerBot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_1px" />

    <LinearLayout
        android:layout_marginLeft="@dimen/length_13"
        android:layout_marginTop="@dimen/length_13"
        android:id="@+id/lnFlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/length_16"
            android:layout_height="@dimen/length_16"
            android:scaleType="fitCenter"
            android:src="@drawable/ease_time_limit" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_4"
            android:layout_marginRight="@dimen/length_5"
            android:text="Flash Deals"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/length_14" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/cdFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/length_1"
            app:isHideTimeBackground="false"
            app:isShowDay="false"
            app:isShowHour="true"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:isShowTimeBgDivisionLine="false"
            app:suffixGravity="center"
            app:suffixTextColor="@color/bg_count_down_flash_sale"
            app:suffixTextSize="@dimen/length_13"
            app:timeBgColor="@color/bg_count_down_flash_sale"
            app:timeBgRadius="@dimen/length_2"
            app:timeBgSize="@dimen/length_13"
            app:timeTextColor="@color/white"
            app:timeTextSize="@dimen/length_10" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="@dimen/length_13"
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnFlash"
        android:layout_marginTop="@dimen/length_7"
        android:maxWidth="@dimen/length_90"
        android:text="Lựa chọn của chuyên gia"
        android:textColor="@color/text_main"
        android:textSize="@dimen/length_11" />

    <TextView
        android:layout_marginLeft="@dimen/length_13"
        android:id="@+id/txtDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescription"
        android:layout_marginTop="@dimen/length_2"
        android:text="Giá từ 99k"
        android:textColor="@color/flash_sale_text_color"
        android:textSize="@dimen/length_11" />

    <ImageView
        android:id="@+id/imgFlash"
        android:layout_width="@dimen/length_80"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/length_35"
        android:layout_marginRight="@dimen/length_5"
        android:scaleType="centerCrop"
        android:src="@drawable/hot_girl_4" />
</RelativeLayout>

