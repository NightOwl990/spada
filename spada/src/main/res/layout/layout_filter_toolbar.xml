<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_7" />

    <RelativeLayout
        android:id="@+id/rlBot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_40"
        android:layout_below="@+id/viewTop"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="@dimen/length_40"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:padding="@dimen/length_12"
            android:src="@drawable/baby_icon_nav_back" />

        <LinearLayout
            android:id="@+id/btnMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/length_5"
                android:text="Lọc sản phẩm"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15" />

            <ImageView
                android:id="@+id/imgMiddle"
                android:layout_width="@dimen/length_12"
                android:layout_height="@dimen/length_12"
                android:src="@drawable/common_filter_arrow_down" />
        </LinearLayout>

        <!--Cart-->
        <ImageView
            android:id="@+id/btnSubRight"
            android:layout_width="@dimen/length_40"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btnRight"
            android:layout_centerVertical="true"
            android:padding="@dimen/length_12"
            android:src="@drawable/top_cart_b_small" />

        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="@dimen/length_40"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/length_6"
            android:src="@drawable/top_search_b" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_1px" />
    </RelativeLayout>

</RelativeLayout>