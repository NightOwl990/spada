<?xml version="1.0" encoding="utf-8"?><!--city, blackcard, ordernumber-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_10"
        android:layout_marginTop="@dimen/length_2"
        android:layout_marginRight="@dimen/length_10"
        android:layout_marginBottom="@dimen/length_15">

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hà Nội"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/length_13" />

        <TextView
            android:id="@+id/txtOrderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Lượt đặt: 723"
            android:textColor="@color/color_777777"
            android:textSize="@dimen/length_13" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hot_sale_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffff1ef"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/length_10"
        android:paddingRight="@dimen/length_10"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgHotSale"
            android:layout_width="@dimen/length_15"
            android:layout_height="@dimen/length_15"
            android:scaleType="centerCrop"
            android:src="@drawable/hot_sale_icon" />

        <TextView
            android:id="@+id/txtHotSale"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_40"
            android:layout_marginLeft="@dimen/length_10"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Đang được giảm giá trong sự kiện mừng tết 2019"
            android:textColor="@color/color_ff527f"
            android:textSize="@dimen/length_13" />
    </LinearLayout>

    <View
        android:id="@+id/meeitao_top_hide_devider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_10"
        android:background="@color/common_service_bg"
        android:visibility="gone" />

    <View
        android:id="@+id/meeitao_top_show_devider"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="@dimen/length_15"
        android:layout_marginRight="@dimen/length_15"
        android:background="#f0f0f0"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/no_vip_hint_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_50"
        android:background="@color/color_FCFAF6"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_vip_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/length_10"
                android:drawableLeft="@drawable/black_card_wallet_icon"
                android:drawablePadding="@dimen/length_10"
                android:text="Tiết kiệm "
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_13" />

            <TextView
                android:id="@+id/txtPriceOffMember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.000đ"
                android:textColor="@color/color_A97831"
                android:textSize="@dimen/length_13" />

            <TextView
                android:id="@+id/no_vip_hint_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" khi mở thẻ hội viên"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnRegisterBlackCard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/color_FCFAF6"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/length_2"
                android:text="Mở ngay"
                android:textColor="@color/color_A97831"
                android:textSize="@dimen/length_13" />

            <ImageView
                android:id="@+id/imgRegisterBlackCard"
                android:layout_width="@dimen/length_15"
                android:layout_height="@dimen/length_15"
                android:layout_marginRight="@dimen/length_10"
                android:padding="@dimen/length_3"
                android:scaleType="centerCrop"
                android:src="@drawable/right_arrow_gold" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>