<?xml version="1.0" encoding="utf-8"?><!--Hospital-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnHospital"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/length_10"
    android:paddingRight="@dimen/length_10">

    <RelativeLayout
        android:id="@+id/rlHosTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/length_15">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/length_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imgEmoticon"
                android:layout_alignLeft="@+id/imgEmoticon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/length_4"
                android:background="@drawable/bg_round_service_tag_5"
                android:gravity="center"
                android:paddingLeft="@dimen/length_21"
                android:paddingTop="1dp"
                android:paddingRight="@dimen/length_10"
                android:paddingBottom="1dp"
                android:text="Xác nhận"
                android:textColor="@color/white"
                android:textSize="@dimen/length_11" />

            <ImageView
                android:id="@+id/imgEmoticon"
                android:layout_width="@dimen/length_23"
                android:layout_height="@dimen/length_23"
                android:gravity="center"
                android:src="@drawable/selected_greed"
                android:textColor="@color/text_main" />

        </RelativeLayout>

        <com.lgkk.base_project.widget.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/length_60"
            android:layout_height="@dimen/length_60"
            android:src="@drawable/logo_benh_vien" />

        <!--Hos Detail-->
        <LinearLayout
            android:id="@+id/lnInfoDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_13"
            android:layout_marginRight="@dimen/length_5"
            android:layout_toRightOf="@+id/imgAvatar"
            android:minHeight="@dimen/length_60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHosName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="Bệnh viện Kangnam"
                android:textColor="#ff333333"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rbHos"
                style="@style/starRatingBar_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_5"
                android:gravity="center_vertical"
                android:isIndicator="true"
                android:rating="4.0"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:stepSize="0.1"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/lnHosRate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHosEnviromentRate"
                    android:layout_width="@dimen/length_100"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/length_5"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Môi trường: 5.0"
                    android:textColor="@color/normal_color_7"
                    android:textSize="@dimen/length_13"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtHosTechniqueRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/length_4"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Chuyên môn: 5.0"
                    android:textColor="@color/normal_color_7"
                    android:textSize="@dimen/length_13"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnHosrate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHosLevelRate"
                    android:layout_width="@dimen/length_100"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/length_5"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Nghiệp vụ: 5.0"
                    android:textColor="@color/normal_color_7"
                    android:textSize="@dimen/length_13"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtHosEffectiveRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/length_4"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Hiệu quả: 5.0"
                    android:textColor="@color/normal_color_7"
                    android:textSize="@dimen/length_13"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHosAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_5"
                android:drawablePadding="10.0dip"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Chuyên ngành: Làm đẹp, thẩm mỹ"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />

            <TextView
                android:id="@+id/txtHosAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Địa chỉ: 190 Trường Chinh, Đống Đa, Hà Nội"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>

        <!--Hos Contact-->
        <LinearLayout
            android:id="@+id/lnHosContact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_30"
            android:layout_below="@+id/lnInfoDoc"
            android:layout_marginLeft="@dimen/length_13"
            android:layout_marginTop="@dimen/length_10"
            android:layout_marginRight="@dimen/length_5"
            android:layout_toRightOf="@+id/imgAvatar"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/lnPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="@dimen/length_14"
                    android:layout_height="@dimen/length_14"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/order_chat_phone" />

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/length_5"
                    android:layout_toRightOf="@+id/imgPhone"
                    android:gravity="center"
                    android:text="Gọi ngay"
                    android:textColor="#ff2cc7c5"
                    android:textSize="@dimen/length_15" />
            </RelativeLayout>

            <View
                android:id="@+id/doctor_line"
                android:layout_width="1dp"
                android:layout_height="@dimen/length_10"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_10"
                android:background="#ff73dacf" />

            <RelativeLayout
                android:id="@+id/lnMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgMessage"
                    android:layout_width="@dimen/length_14"
                    android:layout_height="@dimen/length_14"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/order_chat_new" />

                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/length_5"
                    android:layout_toRightOf="@+id/imgMessage"
                    android:gravity="center"
                    android:text="Chat"
                    android:textColor="#ff2cc7c5"
                    android:textSize="@dimen/length_15" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>