<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/length_300"
    android:layout_height="@dimen/d_230"
    android:id="@+id/mainRvView"
    android:background="@drawable/min_hospits_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d_15"
    android:paddingTop="@dimen/d_14"
    android:paddingBottom="@dimen/d_24">

    <LinearLayout
        android:paddingRight="@dimen/length_15"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:layout_marginRight="@dimen/length_3"
                android:layout_width="@dimen/length_14"
                android:layout_height="@dimen/length_14"
                android:scaleType="centerInside"
                android:src="@drawable/ease_hospital_location" />
            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hà Nội - Hoàng Mai"
                android:textColor="@color/col_333333"
                android:textSize="@dimen/length_14" />
        </LinearLayout>


        <TextView
           android:layout_marginBottom="0.5dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:id="@+id/txtSpaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_5"
            android:textColor="@color/col_333333"
            android:text="12 địa điểm"
            android:textSize="@dimen/length_11" />
    </LinearLayout>

    <TextView
        android:paddingRight="@dimen/length_15"
        android:id="@+id/txtDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_5"
        android:ellipsize="end"
        android:lines="2"
        android:text="Phong cách thiết kế Châu Âu sẽ mang lại cho bạn trải nghiệm tuyệt vời nhất"
        android:textColor="@color/col_777777"
        android:textSize="@dimen/length_13" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSpaList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="@dimen/length_8"
        android:layout_marginTop="@dimen/d_10"

        app:spanCount="3"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
</LinearLayout>