<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/length_10">

    <TextView
        android:id="@+id/txtPostView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4267 lượt xem"
        android:textColor="@color/text_sub"
        android:textSize="@dimen/length_13" />

    <LinearLayout
        android:id="@+id/btnComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/length_20"
        android:layout_toLeftOf="@+id/btnLike"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="@dimen/length_14"
            android:layout_height="@dimen/length_14"
            android:layout_marginRight="@dimen/length_3"
            android:src="@drawable/my_comment" />

        <TextView
            android:id="@+id/txtPostCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="@color/text_sub"
            android:textSize="@dimen/length_13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgLike"
            android:layout_width="@dimen/length_14"
            android:layout_height="@dimen/length_14"
            android:layout_marginRight="@dimen/length_3"
            android:src="@drawable/my_like_gray" />

        <TextView
            android:id="@+id/txtLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="84"
            android:textColor="@color/text_sub"
            android:textSize="@dimen/length_13" />
    </LinearLayout>
</RelativeLayout>