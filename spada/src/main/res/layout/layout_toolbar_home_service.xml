<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolBar"
    android:background="@color/bg_home_service_toolbar_color"
    android:orientation="vertical">

    <View
        android:id="@+id/fakeStatusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         />

    <LinearLayout
        android:id="@+id/lnTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/lnLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/length_15"
                android:layout_height="@dimen/length_15"

                android:layout_marginRight="@dimen/length_2"
                android:padding="@dimen/length_3"
                android:scaleType="centerCrop"
                android:src="@drawable/ease_white_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa điểm"
                android:textColor="@color/white"
                android:textSize="@dimen/length_12" />
        </LinearLayout>

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/length_35"
            android:layout_margin="@dimen/length_7"
            android:baselineAligned="false"
            app:stl_customTabTextLayoutId="@layout/layout_custom_home_service_tab"
            app:stl_customTabTextViewId="@+id/custom_text"
            app:stl_defaultTabTextAllCaps="false"
            app:stl_defaultTabTextSize="@dimen/length_15"
            app:stl_dividerColor="@color/transparent"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="@color/white"
            app:stl_indicatorInterpolation="linear"
            app:stl_indicatorThickness="2dp"
            app:stl_titleOffset="auto_center"
            app:stl_underlineThickness="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_home_service_toolbar_color"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rlSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_35"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginRight="@dimen/length_10"
            android:layout_marginBottom="@dimen/length_10"
            android:background="@drawable/bg_round_border_white_fill">

            <ImageView
                android:layout_width="@dimen/length_16"
                android:layout_height="@dimen/length_16"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/length_5"
                android:layout_toLeftOf="@+id/txtSeach"
                android:src="@drawable/icon_search" />

            <TextView
                android:id="@+id/txtSeach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tìm kiếm"
                android:textColor="@color/grey600"
                android:textSize="@dimen/length_13" />

            <ImageView
                android:id="@+id/btnCamera"
                android:layout_width="@dimen/length_50"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="@dimen/length_10"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"

                android:src="@drawable/icon_home_camera" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>