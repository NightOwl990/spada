<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_7" />

    <RelativeLayout
        android:id="@+id/rlBot"
        android:layout_below="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_40"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgLeft"
            android:layout_width="@dimen/length_45"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:padding="@dimen/length_12"
            android:src="@drawable/baby_icon_back" />

        <RelativeLayout
            android:id="@+id/rlSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/length_7"
            android:layout_marginRight="@dimen/length_100"
            android:layout_marginBottom="@dimen/length_7"
            android:background="@drawable/bg_round_border_white_fill">

            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="@dimen/length_14"
                android:layout_height="@dimen/length_14"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/length_10"
                android:layout_marginRight="@dimen/length_5"
                android:src="@drawable/icon_search" />

            <TextView
                android:id="@+id/txtMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/icon_search"
                android:text="Tìm kiếm"
                android:textColor="@color/text_sub"
                android:textSize="@dimen/length_12" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnRight"
            android:layout_width="@dimen/length_45"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/imgIconRight"
                android:layout_width="@dimen/length_17"
                android:layout_height="@dimen/length_17"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/length_5"
                android:src="@drawable/shopping_cart_icon_white" />

            <TextView
                android:id="@+id/txtAmountRight"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/length_15"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/length_4"
                android:layout_marginRight="@dimen/length_8"
                android:background="@drawable/bg_round_shop_discount_border"
                android:gravity="center"
                android:minWidth="@dimen/length_18"
                android:paddingLeft="@dimen/length_3"
                android:paddingRight="@dimen/length_3"
                android:text="99+"
                android:textColor="@color/white"
                android:textSize="@dimen/length_9"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>