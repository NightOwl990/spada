<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/length_13"
    android:layout_marginRight="@dimen/length_13"
    android:background="@drawable/bg_round_border_white_10px"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/length_10"
    android:padding="@dimen/length_15"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/lnPointDoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/lnHandle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtHandleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="375"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHandleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trường hợp"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtAnswerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="288"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAnswerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lượt tư vấn"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnPositive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtPostiveNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="92%"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPositiveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tích cực"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>