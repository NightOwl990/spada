<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCustomView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lnSubmit"
        style="@style/NestedScrollBarStyle"
        android:background="@color/bg_shop_main_color"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <!--Machine-->
            <com.lgkk.spada.screen.service.widget.filter.FilterTagFlowLayout
                android:id="@+id/filterMachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ffl_title="Loại máy :" />

            <!--Benefit-->
            <com.lgkk.spada.screen.service.widget.filter.FilterTagFlowLayout
                android:id="@+id/filterBenefit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ffl_title="Quyền lợi :" />

            <com.lgkk.spada.screen.service.widget.filter.FilterTagFlowLayout
                android:id="@+id/filterSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ffl_title="Hỗ trợ :" />

            <!--Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/length_15"
                    android:text="Giá trong khoảng (VNĐ) :"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/length_14"/>

                <LinearLayout
                    android:layout_marginBottom="@dimen/length_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="2">


                    <EditText
                        android:layout_marginLeft="@dimen/length_15"
                        android:id="@+id/edtRangePrice1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="9"
                        android:background="@drawable/bg_round_service_grey"
                        android:gravity="center"
                        android:hint="Nhập giá"
                        android:paddingLeft="@dimen/length_15"
                        android:paddingTop="@dimen/length_4"
                        android:paddingRight="@dimen/length_15"
                        android:paddingBottom="@dimen/length_4"
                        android:textColor="@color/text_main"
                        android:textSize="@dimen/length_13" />

                    <View
                        android:layout_gravity="center"
                        android:layout_width="@dimen/length_10"
                        android:layout_height="@dimen/length_1"
                        android:layout_marginLeft="@dimen/length_10"
                        android:layout_marginRight="@dimen/length_10"
                        android:background="@color/text_main" />

                    <EditText
                        android:layout_marginRight="@dimen/length_15"
                        android:id="@+id/edtRangePrice2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="9"
                        android:inputType="number"
                        android:background="@drawable/bg_round_service_grey"
                        android:gravity="center"
                        android:hint="Nhập giá"
                        android:paddingLeft="@dimen/length_15"
                        android:paddingTop="@dimen/length_4"
                        android:paddingRight="@dimen/length_15"
                        android:paddingBottom="@dimen/length_4"
                        android:textColor="@color/text_main"
                        android:textSize="@dimen/length_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_1px" />
            </LinearLayout>

            <com.lgkk.spada.screen.service.widget.filter.FilterTagFlowLayout
                android:id="@+id/filterReality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ffl_dividerVisible="false"
                app:ffl_title="Thực tế :" />

            <com.lgkk.spada.screen.service.widget.filter.FilterTagFlowLayout
                android:id="@+id/filterTrademark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ffl_dividerVisible="false"
                app:ffl_title="Thương hiệu :" />

            <com.lgkk.spada.screen.service.widget.filter.FilterTagFlowLayout
                android:id="@+id/filterComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ffl_dividerVisible="false"
                app:ffl_title="Bình luận :" />

            <com.lgkk.spada.screen.service.widget.filter.FilterTagFlowLayout
                android:id="@+id/filterRule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ffl_dividerVisible="false"
                app:ffl_title="Quy tắc :" />

            <com.lgkk.spada.screen.service.widget.filter.FilterTagFlowLayout
                android:id="@+id/filterLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/length_15"
                app:ffl_dividerVisible="false"
                app:ffl_title="Vị trí :" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--layout submit-->
    <LinearLayout
        android:id="@+id/lnSubmit"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:background="@drawable/bg_border_submit"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Đặt lại"
            android:textColor="@color/drop_down_selected"
            android:textSize="@dimen/length_14" />

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="#73DACF"
            android:gravity="center"
            android:text="Lọc sản phẩm"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/length_14" />
    </LinearLayout>

</RelativeLayout>