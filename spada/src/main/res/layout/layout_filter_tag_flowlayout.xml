<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_margin="@dimen/length_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại máy :"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/length_14" />

        <ImageView
            android:layout_marginRight="@dimen/length_8"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btnExpand"
            android:layout_width="@dimen/length_40"
            android:padding="@dimen/length_13"
            android:layout_height="@dimen/length_40"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/down_arrow_project" />
    </RelativeLayout>


    <com.lgkk.base_project.widget.flowlayout.AutoFlowLayout
        android:id="@+id/flowLayout"
        android:layout_marginLeft="@dimen/d_15"
        android:layout_marginBottom="@dimen/length_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_1px" />
</LinearLayout>