<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/length_5"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnAddImage"
            android:layout_width="@dimen/length_0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/length_5"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/length_15">

            <ImageView
                android:layout_width="@dimen/length_50"
                android:layout_height="@dimen/length_50"
                android:src="@drawable/img_linghuofenqi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_5"
                android:gravity="center"
                android:text="Chọn ảnh"
                android:textColor="@color/text_main"
                android:textSize="@dimen/length_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnAddVideo"
            android:layout_width="@dimen/length_0"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/length_5"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/length_15">

            <ImageView
                android:layout_width="@dimen/length_47"
                android:layout_height="@dimen/length_47"
                android:src="@drawable/qa_video_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_8"
                android:text="Chọn video"
                android:textColor="@color/text_main"
                android:textSize="@dimen/length_14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>