<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_border_top_10px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:visibility="visible">

        <com.lgkk.base_project.widget.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/length_60"
            android:layout_height="@dimen/length_60"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginTop="@dimen/length_10"
            android:layout_marginRight="@dimen/length_10"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_default" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgAvatar"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/length_10"
            android:text="Hằng Đoàn đã thêm một ảnh."
            android:textColor="@color/text_sub"
            android:textSize="@dimen/length_14"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_1px" />

    <RelativeLayout
        android:id="@+id/rlHide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_40"
        android:background="@drawable/bg_press_item"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/length_10"
        android:paddingTop="@dimen/length_5"
        android:paddingRight="@dimen/length_10"
        android:paddingBottom="@dimen/length_5">

        <ImageView
            android:id="@+id/imgHide"
            android:layout_width="@dimen/length_15"
            android:layout_height="@dimen/length_15"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_round_text_sub_border_1px"
            android:scaleType="centerCrop"
            android:src="@drawable/textfield_icon_remove" />

        <TextView

            android:id="@+id/btnHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/length_8"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@+id/imgHide"
            android:text="Ẩn thông báo này"
            android:textColor="@color/text_main"
            android:textSize="@dimen/length_14" />
        />
    </RelativeLayout>


</LinearLayout>