<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/length_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_15"
        android:layout_marginRight="@dimen/length_15"
        android:background="@drawable/bg_round_service_category_gradient_orange"
        android:paddingTop="@dimen/length_15">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/length_15"
        android:layout_marginTop="@dimen/length_10"
        android:layout_marginRight="@dimen/length_15"
        android:layout_marginBottom="@dimen/length_10"
        android:background="@drawable/bg_round_service_category_gradient_purple"
        android:paddingTop="@dimen/length_15">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/length_10"
        android:weightSum="3"
        android:orientation="horizontal"
        android:id="@+id/lnThird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible">

        <!--First One -->
        <LinearLayout
            android:layout_marginLeft="@dimen/length_15"
            android:layout_marginRight="@dimen/length_10"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/lnThirdOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_service_category_top_one"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtThirdOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/length_13"
                android:layout_marginBottom="@dimen/length_13"
                android:text="One"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_12" />
        </LinearLayout>

        <!--First Two -->
        <LinearLayout
            android:layout_marginRight="@dimen/length_10"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/lnThirdTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_service_category_top_two"
            android:visibility="visible">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/txtThirdTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_13"
                android:layout_marginBottom="@dimen/length_13"
                android:text="Two"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_12" />
        </LinearLayout>


        <!--First Three -->
        <LinearLayout
            android:layout_marginRight="@dimen/length_15"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/lnThirdTree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_service_category_top_three"
            android:visibility="visible">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/txtThirdThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_13"
                android:layout_marginBottom="@dimen/length_13"
                android:text="Three"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_12" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_1px" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>