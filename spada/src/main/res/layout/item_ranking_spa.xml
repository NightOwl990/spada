<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/length_144"
    android:layout_height="@dimen/length_200"
    android:layout_marginRight="@dimen/length_7">

    <com.lgkk.base_project.widget.roundedimageview.RoundedImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_border_color="@color/transparent"
        app:riv_border_width="0dp"
        app:riv_corner_radius="@dimen/length_5"
        app:riv_mutate_background="true" />

    <ImageView
        android:id="@+id/imgPattern1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_40"
        android:layout_above="@+id/imgPattern2"
        android:background="@drawable/bg_gradient_ranking_1" />

    <ImageView
        android:id="@+id/imgPattern2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_75"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_round_ranking_pattern2" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_round_ranking_1"
            android:paddingLeft="@dimen/length_5"
            android:paddingTop="@dimen/length_3"
            android:paddingRight="@dimen/length_5"
            android:paddingBottom="@dimen/length_3"
            android:text="Độ nổi tiếng"
            android:textColor="@color/white"
            android:textSize="@dimen/length_13" />

    <!--ln content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_80"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/length_10"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingTop="@dimen/length_7"
        android:visibility="visible">

        <!--top 1-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/length_4"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtTop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/post_like_white"
                android:drawablePadding="@dimen/length_3"
                android:ellipsize="end"
                android:maxWidth="@dimen/length_80"
                android:maxLines="1"
                android:text="Long Nguyễn"
                android:textColor="@color/white"
                android:textSize="@dimen/length_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/length_3"
                android:background="@drawable/bg_gradient_hot_item"
                android:paddingLeft="@dimen/length_7"
                android:paddingTop="@dimen/length_2"
                android:paddingRight="@dimen/length_7"
                android:paddingBottom="@dimen/length_2"
                android:text="TOP 1"
                android:textColor="@color/white"
                android:textSize="@dimen/length_10" />
        </LinearLayout>
        <!--top 2-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/length_4"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtTop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/post_like_white"
                android:drawablePadding="@dimen/length_3"
                android:ellipsize="end"
                android:maxWidth="@dimen/length_80"
                android:maxLines="1"
                android:text="HanHee"
                android:textColor="@color/white"
                android:textSize="@dimen/length_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/length_3"
                android:background="@drawable/bg_gradient_hot_item"
                android:paddingLeft="@dimen/length_7"
                android:paddingTop="@dimen/length_2"
                android:paddingRight="@dimen/length_7"
                android:paddingBottom="@dimen/length_2"
                android:text="TOP 2"
                android:textColor="@color/white"
                android:textSize="@dimen/length_10" />
        </LinearLayout>

        <!--top 3-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtTop3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/post_like_white"
                android:drawablePadding="@dimen/length_3"
                android:ellipsize="end"
                android:maxWidth="@dimen/length_80"
                android:maxLines="1"
                android:text="Sơn Tùng"
                android:textColor="@color/white"
                android:textSize="@dimen/length_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/length_3"
                android:background="@drawable/bg_gradient_hot_item"
                android:paddingLeft="@dimen/length_7"
                android:paddingTop="@dimen/length_2"
                android:paddingRight="@dimen/length_7"
                android:paddingBottom="@dimen/length_2"
                android:text="TOP 3"
                android:textColor="@color/white"
                android:textSize="@dimen/length_10" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>