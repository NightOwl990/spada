<?xml version="1.0" encoding="utf-8"?><!--Hospital-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnHospital"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/length_10"
    android:paddingRight="@dimen/length_10">

    <RelativeLayout
        android:id="@+id/rlHosTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/length_15">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imgEmoticon"
                android:layout_alignLeft="@+id/imgEmoticon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/length_9"
                android:background="@drawable/bg_round_service_tag_5"
                android:gravity="center"
                android:paddingLeft="@dimen/length_17"
                android:paddingTop="@dimen/length_1"
                android:paddingRight="@dimen/length_10"
                android:paddingBottom="@dimen/length_1"
                android:text="Xác nhận"
                android:textColor="@color/white"
                android:textSize="@dimen/length_12" />

            <ImageView
                android:id="@+id/imgEmoticon"
                android:layout_width="@dimen/length_20"
                android:layout_height="@dimen/length_20"
                android:gravity="center"
                android:src="@drawable/selected_greed"
                android:textColor="@color/text_main" />

        </RelativeLayout>

        <com.lgkk.base_project.widget.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/length_45"
            android:layout_height="@dimen/length_45"
            android:src="@drawable/logo_benh_vien" />

        <!--COmment Detail-->
        <LinearLayout
            android:id="@+id/lnCommentDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_13"
            android:layout_marginRight="@dimen/length_5"
            android:layout_toRightOf="@+id/imgAvatar"
            android:minHeight="@dimen/length_60"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="HanHee"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/length_15" />

                <ImageView
                    android:id="@+id/imgLevel"
                    android:layout_width="@dimen/length_55"
                    android:layout_height="@dimen/length_16"
                    android:layout_marginTop="@dimen/length_1"
                    android:layout_toRightOf="@+id/txtName"
                    android:padding="@dimen/length_1"
                    android:src="@drawable/level17" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/rbRate"
                style="@style/starRatingBar_mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_5"
                android:gravity="center_vertical"
                android:isIndicator="true"
                android:rating="4.0"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:stepSize="0.1"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/lnHosRate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHosEnviromentRate"
                    android:layout_width="@dimen/length_100"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/length_5"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Môi trường: 5.0"
                    android:textColor="@color/normal_color_7"
                    android:textSize="@dimen/length_13"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtHosTechniqueRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/length_4"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Chuyên môn: 5.0"
                    android:textColor="@color/normal_color_7"
                    android:textSize="@dimen/length_13"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnHosrate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHosLevelRate"
                    android:layout_width="@dimen/length_100"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/length_5"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Nghiệp vụ: 5.0"
                    android:textColor="@color/normal_color_7"
                    android:textSize="@dimen/length_13"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/txtHosEffectiveRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/length_4"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Hiệu quả: 5.0"
                    android:textColor="@color/normal_color_7"
                    android:textSize="@dimen/length_13"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_10"
                android:drawablePadding="10.0dip"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Ác mộng qua đi và giờ mình là con người khác, ngoại hình ưa nhìn hơn cho mình những điều mà trước đây chưa đám nghĩ"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/length_13" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="2 ngày trước"
                android:textColor="@color/normal_color_7"
                android:textSize="@dimen/length_13" />


            <!--Image-->
            <LinearLayout
                android:id="@+id/lnImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_10"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/imgReview1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/length_90"
                    android:layout_marginRight="@dimen/length_10"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hot_girl_3" />

                <ImageView
                    android:id="@+id/imgReview2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/length_90"
                    android:layout_marginRight="@dimen/length_10"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hot_girl_1" />

                <ImageView
                    android:id="@+id/imgReview3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/length_90"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hot_girl_2" />
            </LinearLayout>

            <!--Like Number and Comment count-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/length_15"
                android:layout_marginBottom="@dimen/length_15">

                <TextView
                    android:id="@+id/txtPostView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4267 lượt xem"
                    android:textColor="@color/text_sub"
                    android:textSize="@dimen/length_13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/length_20"
                    android:layout_toLeftOf="@+id/lnLike"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgComment"
                        android:layout_width="@dimen/length_14"
                        android:layout_height="@dimen/length_14"
                        android:layout_marginRight="@dimen/length_3"
                        android:src="@drawable/my_comment" />

                    <TextView
                        android:id="@+id/txtCommentNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textColor="@color/text_sub"
                        android:textSize="@dimen/length_13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgLike"
                        android:layout_width="@dimen/length_14"
                        android:layout_height="@dimen/length_14"
                        android:layout_marginRight="@dimen/length_3"
                        android:src="@drawable/my_like_gray" />

                    <TextView
                        android:id="@+id/txtLikeNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="84"
                        android:textColor="@color/text_sub"
                        android:textSize="@dimen/length_13" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_1px" />
</LinearLayout>