<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/length_40"
    android:background="@color/bg_home_search_color">

    <LinearLayout
        android:id="@+id/load_more_loading_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_40"
        android:background="@color/bg_home_search_color"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/loading_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/length_4" />

        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_4"
            android:text="Đang tải dữ liệu"
            android:textColor="@color/text_main"
            android:textSize="@dimen/length_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/load_more_load_fail_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_40"
        android:background="@color/bg_home_search_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/length_22"
            android:layout_height="@dimen/length_22"
            android:layout_marginRight="@dimen/length_4"
            android:src="@drawable/msg_ic_send_fail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_4"
            android:text="Mạng có vấn đề, click để tải lại"
            android:textColor="@color/text_main"
            android:textSize="@dimen/length_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/load_more_load_end_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_40"
        android:background="@color/bg_home_search_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/length_22"
            android:layout_height="@dimen/length_22"
            android:layout_marginRight="@dimen/length_4"
            android:src="@drawable/empty_view_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/length_4"
            android:text="Đã tải hết dữ liệu"
            android:textColor="@color/text_main"
            android:textSize="@dimen/length_14" />
    </LinearLayout>

</FrameLayout>