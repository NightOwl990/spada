<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_7" />

    <RelativeLayout
        android:id="@+id/rlBot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_45"
        android:layout_below="@+id/viewTop"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/btnLeft"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung tâm hỗ trợ"
                android:layout_marginLeft="@dimen/length_15"
                android:layout_marginRight="@dimen/length_15"
                android:textColor="@color/white"
                android:textSize="@dimen/length_14" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/btnRight"
            android:layout_width="@dimen/length_45"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imgIconRight"
                android:layout_width="@dimen/length_17"
                android:layout_height="@dimen/length_17"
                android:layout_centerInParent="true"
                android:src="@drawable/myhome_user_set_white" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>