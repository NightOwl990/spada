<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/length_7"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgNotice"
        android:layout_width="@dimen/length_14"
        android:layout_height="@dimen/length_14"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tool_forbit" />

    <TextView
        android:id="@+id/txtNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/length_3"
        android:text="Không nên"
        android:textColor="@color/text_sub"
        android:textSize="@dimen/length_14" />
</LinearLayout>