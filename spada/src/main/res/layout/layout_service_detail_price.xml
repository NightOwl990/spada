<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlPrice"
    android:layout_width="match_parent"
    android:layout_height="@dimen/length_35"
    android:layout_marginLeft="@dimen/length_20"
    android:layout_marginTop="@dimen/length_7"
    android:orientation="horizontal"
    android:visibility="visible">

    <TextView
        android:id="@+id/txtdprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/length_1"
        android:text="đ"
        android:textColor="#ffff527f"
        android:textSize="@dimen/length_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDiscountPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/txtdprice"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:text="5.000.000"
        android:textColor="#ffff527f"
        android:textSize="@dimen/length_23"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/length_7"
        android:layout_marginRight="@dimen/length_2"
        android:layout_marginBottom="@dimen/length_2"
        android:layout_toRightOf="@+id/txtDiscountPrice"
        android:text="đ2.000.000"
        android:textColor="@color/text_color_golden"
        android:textSize="@dimen/length_13" />

    <TextView
        android:id="@+id/txtPercentOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/length_3"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/length_7"
        android:layout_toRightOf="@+id/txtPrice"
        android:background="@drawable/corner_product_red_new"
        android:paddingLeft="@dimen/length_5"
        android:paddingRight="@dimen/length_5"
        android:text="20%"
        android:textColor="@color/text_main"
        android:textSize="@dimen/length_12"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/event_not_start_black_card_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/length_12"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/length_1"
        android:layout_marginBottom="@dimen/length_5"
        android:layout_toRightOf="@+id/txtPercentOff"
        android:scaleType="fitStart"
        android:src="@drawable/vip_member_card"
        android:visibility="visible" />

</RelativeLayout>